<%= form_for @movie do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :premiere_date %>
    <%= f.date_select :premiere_date, start_year: 1895  %>
  </p>
  <p>
    <%= f.label :length %>
    <%= f.text_field :length %>
  </p>
  <p>
    <%= f.label :genre %>
    <%= f.collection_select :genre, Genre.all.order(:name), :name, :name, include_blank: false %>
  </p>
  <p>
    <%= f.label :director %>
    <%= f.text_field :director %>
  </p>
  <p>
    <%= f.label :scenarist %>
    <%= f.text_field :scenarist %>
  </p>
  <p>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
